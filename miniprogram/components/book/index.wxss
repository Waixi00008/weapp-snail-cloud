.container {
  font-size: 14px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.cover {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.bg {
  width: 100%;
  height: 100%;
  filter: blur(15rpx);
}

.avatar {
  width: 100%;
  height: 300rpx;
  position: absolute;
  left: 0;
  top: 30rpx;
}

.info {
  position: absolute;
  left: 0;
  top: 340rpx;
  width: 100%;
  height: 100rpx;
  line-height: 30px;
  color: white;
  text-align: center;
}

.title {
  display: block;
  font-size: 20px;
}

.author {
  display: block;
}

.row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.userAvatar {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.nickName {
  vertical-align: middle;
}

.rating {
  vertical-align: middle;
}

