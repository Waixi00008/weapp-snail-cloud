.tag-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.summary {
  box-sizing: border-box;
  margin-top: 10rpx;
  padding: 10rpx 30rpx;
  width: 100%;
  font-size: 14px;
  text-indent: 2em;
}

.summary text {
  width: 100%;
}

