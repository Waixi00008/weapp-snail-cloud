.comment-container {
  font-size: 14px;
  background-color: #eee;
  border-bottom: 1px solid #eee;
}

.comment-title {
  padding-left: 30rpx;
  line-height: 40px;
  font-size: 40rpx;
}

.comment {
  margin-bottom: 20rpx;
  padding: 10rpx 30rpx;
  background-color: white;
}

.userInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.avatar {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.text-primary {
  color: #ea5149;
}

.comment-content {
  margin-left: 50rpx;
  margin-right: 30rpx;
  word-wrap:break-word;
  /* letter-spacing: 2rpx; */
}
